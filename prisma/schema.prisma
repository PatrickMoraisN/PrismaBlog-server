generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  email    String @unique
  name     String
  age      Int?
  password String

  posts Post[]

  @@map("users")
}

model Post {
  id        String @id
  published Boolean @default(true)
  title     String
  body      String @db.Text
  authorId  String

  author User @relation(fields: [authorId], references: [id])

  @@map("posts")
}